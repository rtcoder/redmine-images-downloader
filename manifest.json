{
  "name": "Redmine Image Downloader",
  "description": "Quickly download images from Redmine",
  "version": "1.0.1",
  "author": "Dawid Je≈º",
  "minimum_chrome_version": "116",
  "manifest_version": 3,
  "permissions": [
    "downloads"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "/js/download-buttons.js",
        "/js/content-script.js"
      ],
      "css": [
        "/css/styles.css"
      ],
      "type": "module",
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_icon": {
      "128": "/images/icon128.png"
    }
  },
  "icons": {
    "128": "/images/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "/css/*",
        "/images/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "background": {
    "service_worker": "/js/background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'",
    "sandbox": "sandbox allow-scripts"
  }
}
